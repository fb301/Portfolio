---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import Navbar from "../../components/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import data from "../../data.json";
import "../../styles/global.css";

export function getStaticPaths() {
  return data.map((project) => ({
    params: { id: project.id },
  }));
}

interface Props {
  imagePath: string;
}

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.webp",
);
const project = data.find((p) => p.id === Astro.params.id) || data[0];
const { name, imagePath, url } = project;

if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{webp}"`,
  );
---

<Layout transition:persist>
  <section>
    <div id='hallo'>
      <Navbar />
      <div class='diagonal-text'>
        <p>{name}</p>
      </div>
      <div class='card'>
        <div class='container'>
          <Image src={images[imagePath]()} alt={name} loading='eager' />
        </div>
        <div class='wrapper'>
          <p class='card-name'>{name}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
<style>
  section {
    padding-bottom: 1000px;
  }
  .card {
    display: grid;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding-top: 30px;
    padding-bottom: 20px;
    border-radius: 2.5rem;
    --transform-speed: 333ms;
    transition: box-shadow calc(var(--transform-speed) * 0.5) ease-in-out;
    transform: scale(0.97);
    outline: 3px solid #000000;
    box-shadow: 15px 15px 0px 0px rgba(0, 0, 0, 1);
    background-color: #282828;
    transition: background-color calc(var(--transform-speed) * 0.5) ease-in;
  }

  .card-name {
    text-align: center;
    align-self: flex-end;
    padding: 10px 0 10px 0;
    font-weight: 600;
    font-size: 24px;
  }

  .container {
    justify-content: center;
    padding: 20px;
    padding-top: 50px;
    box-sizing: border-box;
  }

  .card::after {
    outline: 3px solid #00000000;
    box-shadow: 15px 15px 0px 0px rgba(0, 0, 0, 0);
    background-color: #29292900;
  }

  img {
    border: 3px solid;
    border-radius: 2.5rem;
    display: block;
    object-fit: cover;
    width: 375px;
    height: 275px;
    max-width: 100%;
    background-color: #222;
    transition: transform calc(var(--transform-speed) * 0.5) ease-out;
  }

  .diagonal-text {
    padding-top: 40px;
    padding-bottom: 40px;
    text-align: center;
    overflow: hidden;
  }

  .diagonal-text p {
    --skew-angle: -4deg;
    --clr-primary-300: hsl(219, 76%, 55%);
    --clr-primary-400: hsl(219, 76%, 40%);
    font-weight: 900;
    font-size: clamp(2.8rem, calc(1.85rem + 4.74vw), 5.52rem);
    font-family: system-ui;
    rotate: var(--skew-angle);
    text-shadow:
      2px 2px 0 var(--clr-primary-300),
      4px 4px 0 rgba(42, 123, 155, 1),
      6px 6px 0 var(--clr-primary-400);
  }
</style>
