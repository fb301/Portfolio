---
import Card from "../components/Card.astro";

interface Project {
  id: string;
  name: string;
  image: string;
  url: string;
}

const projects: Project[] = [
  {
    id: "1",
    name: "Munamii Cakery",
    image: "/src/assets/oskar-kadaksoo-yxU--QW33GM-unsplash_480x320.webp",
    url: "projects/Munamii",
  },
  {
    id: "2",
    name: "Portfolio",
    image: "/src/assets/pan-xiaozhen-twjBMeSe0Gg-unsplash_480x720.webp",
    url: "",
  },
  {
    id: "3",
    name: "Placeholder",
    image: "/src/assets/milad-fakurian-Hqkx4vRhrIU-unsplash_480x720.webp",
    url: "",
  },
  {
    id: "4",
    name: "More Placeholder",
    image: "/src/assets/patrick-federi-QS716x537_E-unsplash_480x720.webp",
    url: "",
  },
];
---

<section id='projects'>
  <div class='card-grid'>
    {
      projects.map((project) => (
        <Card
          id={project.id}
          imagePath={project.image}
          name={project.name}
          altText={project.name}
        />
      ))
    }
  </div>
</section>

<style>
  .flex {
    display: flex;
    margin: auto;
    padding-bottom: 20px;
  }

  .card-grid {
    margin: 20px auto;
    display: grid;
    grid-template-columns: 450px 450px;
    grid-row: auto auto;
    grid-column-gap: 20px;
    grid-row-gap: 20px;
    justify-content: center;
    padding-bottom: 20px;
  }

  @media screen and (max-width: 768px) {
    .card-grid {
      display: flex;
      flex-direction: column;
    }
  }
</style>
