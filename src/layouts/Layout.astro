---
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title = "Fredrik's Portfolio", description = "Fredrik's Portfolio" } =
  Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='description' content={description} />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='bg-[--background]'>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --background: #101010;
  }
</style>
