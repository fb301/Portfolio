---
interface Props {
  title?: string;
}
import { ClientRouter } from "astro:transitions";
const { title = "Fredrik's Portfolio" } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='utf8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href='/favicon.svg' type='image/svg+xml' />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content="'s Portfolio website." />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>
