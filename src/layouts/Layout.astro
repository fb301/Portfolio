---
interface Props {
  title?: string;
}
import { ClientRouter } from "astro:transitions";
const { title = "Fredrik's Portfolio" } = Astro.props;
import background from "../assets/backgroundImg.svg";
import "../styles/global.css";
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='utf8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href='/favicon.svg' type='image/svg+xml' />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content="'s Portfolio website." />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <img
      id='background'
      src={background.src}
      alt='background'
      fetchpriority='high'
    />
    <img
      id='background'
      src={background.src}
      alt='background'
      fetchpriority='high'
    />
    <slot />
  </body>
</html>
<style>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    box-sizing: inherit;
  }
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    opacity: 1;
    overflow: hidden;
    filter: saturate(100%) brightness(500%) blur(6px);
  }
</style>
